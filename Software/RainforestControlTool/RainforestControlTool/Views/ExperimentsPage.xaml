<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RainforestControlTool.ViewModels"
             x:Class="RainforestControlTool.Views.ExperimentsPage"
             Title="Rainforest Experiments">
    
    <!-- Model -->
    <ContentPage.BindingContext>
        <viewModels:ExperimentsViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Start">
            
            <!-- Connect to station -->
            <Border
                Style="{ StaticResource RoundedBorder }">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <!-- Row 0 -->
                    <Label
                        Text="Connect to a station"
                        HorizontalOptions="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="4" />
                    
                    <!-- Row 1 -->
                    <Picker
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Title="Select a station">
                        
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Yiff</x:String>
                                <x:String>Yuff</x:String>
                                <x:String>Yerf</x:String>
                                <x:String>Yapp</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Button
                        Grid.Row="1"
                        Grid.Column="3"
                        HeightRequest="40"
                        WidthRequest="40"
                        Text="R" />

                    
                    <!-- Row 2 -->
                    <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Text="Connect" />
                    
                    <Button
                        Grid.Row="2"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Text="Disconnect" />
                    
                </Grid>
                
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>