<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Rounded border -->
    <Style TargetType="Border" x:Key="RoundedBorder">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Primary}}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 10, 10, 10, 10" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="5" />
    </Style>
    
    <!-- Buttons with margin -->
    <Style TargetType="Button" x:Key="MarginatedButton">
        <Setter Property="Margin" Value="10" />
    </Style>
    
</ResourceDictionary>
